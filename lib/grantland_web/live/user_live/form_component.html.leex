<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "user-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :role %>
  <%= select f, :role_id, Enum.map(@roles, &{&1.name, &1.id}) %>
  <%= error_tag f, :role %>

  <div>
    <%= submit "Save", phx_disable_with: "Saving..." %>
  </div>
</form>
